#include<stdio.h>
int main()
{
    int m, n;
    printf("192324112-sree ruthin reddy\n");
    printf("Enter no. of rows and columns: ");
    scanf("%d %d", &m, &n);
    
    int mat[m][n];
    
    printf("\nEnter the elements of the matrix:\n");
    for(int i=0; i<m; i++)
    {
        for(int j=0; j<n; j++)
        {
            scanf("%d", &mat[i][j]);
        }
    }
    
    int sum = 0;
    printf("\nDiagonal elements: ");
    for(int i=0; i<m; i++)
    {
        for(int j=0; j<n; j++)
        {
            if(i == j || i + j == m - 1)
            {
                printf("%d ", mat[i][j]);
                sum += mat[i][j];
            }
        }
    }
    
    printf("\nSum of diagonal elements: %d\n", sum);
    
    return 0;
}
